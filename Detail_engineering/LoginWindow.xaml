<Window x:Class="Detail_engineering.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in" Width="420" Height="280"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#0F1631" Foreground="#EAF0FF" WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="12" Background="#0F1631" BorderBrush="#26305E" BorderThickness="1">
        <Grid Margin="22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Login" Foreground = "#EAF0FF"
                            VerticalAlignment="Center" Margin="4,0" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" Content="✕" Width="25" Height="20"
                            Background="#1F2447" 
                            BorderBrush="#2A3162" Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- Username -->
            <TextBlock Grid.Row="2" Text="Username" Margin="4,0,0,6" />
            <TextBox x:Name="TxtUser" Grid.Row="2" Margin="0,22,0,0" Height="36"
                     Background="#1A203D" BorderBrush="#3A4588" BorderThickness="1" Foreground = "#EAF0FF"
                     Padding="8" />

            <!-- Password -->
            <TextBlock Grid.Row="4" Text="Password" Margin="4,0,0,6" />
            <PasswordBox x:Name="TxtPass" Grid.Row="4" Margin="0,22,0,0" Height="36"
                         Background="#1A203D" BorderBrush="#3A4588" BorderThickness="1" Foreground = "#EAF0FF"
                         Padding="8" />

            <!-- Error -->
            <TextBlock x:Name="LblError" Grid.Row="6" Margin="4,0,0,10"
                       Foreground="#FF6B6B" Visibility="Collapsed" />

            <!-- Actions -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Login" Width="100" Height="36" Margin="0,0,8,0"
                        Background="#3156D8" BorderBrush="#4A6AF0"
                        Click="Login_Click"/>
                <Button Content="Cancel" Width="100" Height="36"
                        Background="#1F2447" BorderBrush="#2A3162"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
